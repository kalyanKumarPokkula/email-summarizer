{
	"manifest_version": 3,
	"name": "Gmail Summary Sidebar",
	"version": "1.0",
	"description": "Adds a summary sidebar to Gmail to save user time",
	"permissions": ["activeTab", "scripting"],
	"host_permissions": ["https://mail.google.com/*"],
	"content_scripts": [
		{
			"matches": ["https://mail.google.com/*"],
			"js": ["main.js"],
			"css": ["styles.css"]
		}
	]
}
